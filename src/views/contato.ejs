<%- include('includes/head') %>

<div class="container">
  <div class="row">

    <div class="col-lg-8 my-3">
      <h1 class="text-center title">Contato</h1>
      <p class="text-center lead">Crie e edite seus contatos abaixo.</p>

      <%- include('includes/messages') %>

      <% if(contato._id) {%>
      <form action="/contato/edit/<%= contato._id %>" method="POST" class="contato">
      <% } else {%>
        <form action="/contato/cadastro" method="POST" class="contato">
      <% } %>
        <input type="hidden" name="_csrf" value=<%= csrfToken %>>

        <div class="inputbox">
          <input value="<%= contato.nome %>" type="text" class="nome" name="nome" id="nome">
          <label for="nome">Nome</label>
        </div>

        <div class="inputbox">
          <input value="<%= contato.sobrenome %>" type="text" class="sobrenome" name="sobrenome" id="sobrenome">
          <label for="sobrenome">Sobrenome</label>
        </div>

        <div class="inputbox">
          <input value="<%= contato.email %>" type="email" class="email" name="email" id="email">
          <label for="email">Email</label>
        </div>

        <div class="inputbox">
          <input value="<%= contato.telefone %>" type="tel" class="telefone" name="telefone" id="telefone">
          <label for="telefone">Telefone</label>
        </div>

        <a class="btn-secundary" href="/">‚Üê Home</a>
        <button type="submit" class="btn-default">Salvar</button>
      </form>

    </div>
    
    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer') %>
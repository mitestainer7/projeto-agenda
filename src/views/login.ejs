<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
      <h1 class="text-center">Faça seu cadastro ou login</h1>
      <p class="text-center lead">Faça login ou crie sua conta abaixo</p>

      <div class="row">
        
        <div class="col-lg">
          <h4>Faça seu cadastro</h4>
          <p>Preencha o formulário abaixo para criar sua conta.</p>

          <form action="/login/register" method="POST">
            <input type="hidden" name="_csrf" value=<%= csrfToken %>>
            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" class="form-control" name="email" id="email" placeholder="Escreva seu email">
            </div>
            <div class="form-group">
              <label for="password">Senha</label>
              <input type="password" class="form-control" name="password" id="password" placeholder="Insira sua senha">
            </div>
            <button type="submit" class="btn btn-primary">Criar minha conta</button>
          </form>
        </div>

        <div class="col-lg">
          <h4>Faça seu login</h4>
          <p>Insira seus dados para fazer login em nosso sistema.</p>

          <form action="/login/login" method="POST">
            <input type="hidden" name="_csrf" value=<%= csrfToken %>>
            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" class="form-control" name="email" id="email" placeholder="Escreva seu email">
            </div>
            <div class="form-group">
              <label for="password">Senha</label>
              <input type="password" class="form-control" name="password" id="password" placeholder="Insira sua senha">
            </div>
            <button type="submit" class="btn btn-primary">Fazer login</button>
          </form>
        </div>
      </div>

    </div>
    
    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer') %>